singularity {

	enabled = true
	autoMounts = true
	cacheDir = "${params.singularity_store}"
	libraryDir = "${params.singularity_store}"

}

process {

    memory = 125.GB
    cpus = 20

    withLabel: mapping {
        memory = 200.GB
        cpus = 40
    }

    withLabel: indexing {
        memory = 125.GB
        cpus = 25
    }


